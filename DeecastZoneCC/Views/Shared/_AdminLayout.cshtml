    <script type="text/javascript">
        var $ = jQuery.noConflict();
        var focusedId;

        function openSuccessPopup(msg) {
            var swalInits = swal.mixin({
                buttonsStyling: false,
                cancelButtonClass: 'btn btn-light'
            });

            swalInits({
                title: 'Message',
                text: msg,
                type: 'success',
                showCloseButton: true,
                showConfirmButton: false,
                allowOutsideClick: false
            });
        }

        function openErrorPopup(msg) {
            var swalInit = swal.mixin({
                buttonsStyling: false,
                cancelButtonClass: 'btn btn-light'
            });

            swalInit({
                title: 'Error',
                text: msg,
                type: 'error',
                showCloseButton: true,
                showConfirmButton: false,
                allowOutsideClick: false
            });
        }

        function onlyNumbers(e) {
            var unicode = e.charCode ? e.charCode : e.keyCode;
            if (unicode != 8) {
                if (unicode < 9 || unicode > 9 && unicode < 46 || unicode > 57 || unicode == 47) {
                    if (unicode == 37 || unicode == 38) return true; else return false;
                }
                else return true;
            }
            else return true;
        }

        function readURL(input, targetID) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $(targetID).attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function setDatatable(id) {
            if ($("#" + id + "_wrapper").length > 0) {
                $("#" + id).DataTable().destroy();
            }

            if ($("#" + id + " tbody tr th").length > 0) {
                $("#" + id).prepend($("<thead></thead>").append($("#" + id).find("tr:first"))).DataTable({
                    responsive: true,
                    dom: 'lBfrtip',
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            title: 'List',
                            exportOptions: {
                                columns: ":not(.not-export-column)"
                            }
                        },
                        {
                            extend: 'pdfHtml5',
                            title: 'List',
                            download: 'open',
                            exportOptions: {
                                columns: ":not(.not-export-column)"
                            },
                            pageSize: 'A4'
                        },
                        {
                            extend: 'csvHtml5',
                            title: 'List',
                            exportOptions: {
                                columns: ":not(.not-export-column)"
                            }
                        }
                    ],
                    columnDefs: [
                        { responsivePriority: 1, targets: 0 },
                        { responsivePriority: 2, targets: -1 },
                        { responsivePriority: 3, targets: -2 }
                    ],
                    "initComplete": function (settings, json) {
                        $('#loadingMask').fadeOut();
                    }
                });

